public class MyLinkedList{
    
    private Node head;
    private int length;


    public MyLinkedList(){
	head = new Node(null);
    }

    public Node getNode(int i) throws IndexOutOfBoundsException{
	if (i<0){
	    throw new IndexOutOfBoundsException();
	}

	Node current = head.getNext();
	
	while (i>0){
	    if (current != null){
		current = current.getNext();
		i--;
	    }

	    else{
		throw new IndexOutOfBoundsException();
	    }
	}
	
	return current;
    }

    public void add(String s, int pos){
	if (pos<0 || pos>length){
	    throw new IndexOutOfBoundsException();
	}
	
	else{
	    Node n = new Node(s);
	    Node before = getNode(pos-1);
	    Node after = before.getNext();
	    n.setNext(after);
	    before.setNext(n);
	    length++;
	}   
    }

    public void remove(int pos){
	if (pos<0 || pos>length){
	    throw new IndexOutOfBoundsException();
	}

	else{
	    Node n = getNode(pos);
	    Node before = getNode(pos-1);
	    Node After = getNode(pos+1);
	    before.setNext(after);
	    pos.setNext(null);
	    length--;
	}
}
